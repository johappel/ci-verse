# CORS Headers für CI-Verse Bilder und Assets
<IfModule mod_headers.c>
    # Erlaubt alle Origins (für lokale Entwicklung)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, HEAD, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Accept, Authorization"
    Header set Access-Control-Max-Age "86400"
    
    # Für Bilder spezifisch
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Erlaubt Options Request (preflight)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} ^OPTIONS$
    RewriteRule ^(.*)$ $1 [L]
</IfModule>
